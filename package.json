{
  "name": "signal-crypto-bot",
  "version": "1.0.0",
  "description": "AI-powered cryptocurrency trading bot with real-time signals, paper trading, WebSocket communication, and full Docker containerization",
  "private": false,
  "homepage": "https://github.com/petarnenov/signal-crypto-bot#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petarnenov/signal-crypto-bot.git"
  },
  "bugs": {
    "url": "https://github.com/petarnenov/signal-crypto-bot/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/petarnenov/signal-crypto-bot"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd packages/frontend && npx vite --port 3000",
    "dev:backend": "cd packages/backend && node src/server.js",
    "build": "npx nx run-many --target=build --all",
    "build:backend": "npx nx build backend",
    "build:frontend": "npx nx build frontend",
    "test": "npx nx run-many --target=test --all",
    "test:backend": "npx nx test backend",
    "test:frontend": "npx nx test frontend",
    "test:shared": "npx nx test shared",
    "test:database": "npx nx test database",
    "test:integration": "npx nx test backend --testNamePattern=integration",
    "test:all": "npx nx run-many --target=test --all",
    "lint": "npx nx run-many --target=lint --all",
    "lint:fix": "npx nx run-many --target=lint --all --fix",
    "lint:md": "markdownlint \"**/*.md\" --fix",
    "spell:check": "cspell \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "clean": "npx nx run-many --target=clean --all && rm -rf node_modules",
    "clean:db": "rm -f crypto_bot.db crypto_bot.db-shm crypto_bot.db-wal",
    "seed": "npx nx seed backend",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:rebuild": "docker compose down && docker compose build --no-cache && docker compose up -d",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "start": "npx nx start backend",
    "start:backend": "npx nx start backend",
    "start:frontend": "npx nx start frontend"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "^21.4.1",
    "@nx/jest": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/react": "^21.4.1",
    "@nx/vite": "^21.4.1",
    "@nx/workspace": "^21.4.1",
    "concurrently": "^8.2.2",
    "cspell": "^8.6.0",
    "markdownlint-cli": "^0.37.0",
    "nx": "21.4.1"
  },
  "keywords": [
    "cryptocurrency",
    "trading-bot",
    "ai-signals",
    "paper-trading",
    "websocket",
    "real-time",
    "react",
    "nodejs",
    "docker",
    "monorepo",
    "nx",
    "openai",
    "binance",
    "telegram",
    "sqlite",
    "prometheus",
    "grafana",
    "typescript",
    "vite",
    "express",
    "trading-signals",
    "crypto-trading",
    "automated-trading",
    "technical-analysis",
    "market-analysis"
  ],
  "author": {
    "name": "Petar Petrov",
    "email": "petar.petrov@example.com",
    "url": "https://github.com/petarnenov"
  },
  "contributors": [
    {
      "name": "Petar Petrov",
      "email": "petar.petrov@example.com",
      "url": "https://github.com/petarnenov"
    }
  ],
  "license": "MIT",
  "main": "packages/backend/src/server.js",
  "files": [
    "packages/",
    "monitoring/",
    "docker-compose.yml",
    "docker-compose.dev.yml",
    "README.md",
    "DOCKER.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {},
  "peerDependenciesMeta": {},
  "overrides": {},
  "resolutions": {},
  "packageManager": "npm@8.0.0"
}