{
	"name": "signal-crypto-bot",
	"version": "1.0.0",
	"description": "Crypto signal bot using GPT-5 and Telegram",
	"main": "index.js",
	"scripts": {
		"lint:md": "markdownlint **/*.md",
		"lint:md:fix": "markdownlint **/*.md --fix",
		"pre-commit": "npm run lint:md:fix",
		"spell:check": "cspell \"**/*.{md,js,ts,json}\"",
		"spell:add": "echo 'Add unknown words to .vscode/settings.json cSpell.words array'",
		"dev": "concurrently \"npm run dev:server\" \"cd frontend && npm run dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
		"dev:restart": "npm run dev:stop && npm run dev",
		"dev:stop": "pkill -f 'node src/server.js' && pkill -f 'vite' && pkill -f 'nodemon'",
		"build": "cd frontend && npm run build",
		"preview": "cd frontend && npm run preview",
		"start": "node src/server.js",
		"dev:server": "nodemon src/server.js",
		"dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
		"seed": "node seed-database.js",
		"test": "concurrently \"npm run test:backend\" \"npm run test:frontend\" \"npm run test:integration\" --names \"backend,frontend,integration\" --prefix-colors \"blue,green,yellow\"",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:backend": "vitest run test/backend",
		"test:frontend": "cd frontend && npm run test",
		"test:integration": "vitest run test/integration",
		"cleanup": "node cleanup-memory-files.js",
		"test:clean": "npm run cleanup && npm run test"
	},
	"keywords": [
		"crypto",
		"bot",
		"telegram",
		"gpt-5",
		"signals"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@testing-library/react": "^14.1.2",
		"@testing-library/jest-dom": "^6.1.5",
		"@vitejs/plugin-react": "^4.2.1",
		"concurrently": "^8.2.2",
		"cspell": "^8.6.0",
		"jsdom": "^23.0.1",
		"markdownlint-cli": "^0.37.0",
		"nodemon": "^3.0.2",
		"vite": "^5.0.12",
		"vitest": "^1.0.4",
		"@vitest/ui": "^1.0.4"
	},
	"dependencies": {
		"axios": "^1.11.0",
		"better-sqlite3": "^9.2.2",
		"binance-api-node": "^0.12.7",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0",
		"node-telegram-bot-api": "^0.64.0",
		"openai": "^4.20.1",
		"sqlite3": "^5.1.6",
		"technicalindicators": "^3.1.0",
		"ws": "^8.18.3"
	}
}