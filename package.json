{
  "name": "signal-crypto-bot-monorepo",
  "version": "1.0.0",
  "description": "Crypto Signal Bot - Monorepo with Backend, Frontend, and Shared packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd packages/frontend && npx vite --port 3000",
    "dev:backend": "cd packages/backend && node src/server.js",
    "build": "npx nx run-many --target=build --all",
    "build:backend": "npx nx build backend",
    "build:frontend": "npx nx build frontend",
    "test": "npx nx run-many --target=test --all",
    "test:backend": "npx nx test backend",
    "test:frontend": "npx nx test frontend",
    "test:shared": "npx nx test shared",
    "test:database": "npx nx test database",
    "test:integration": "npx nx test backend --testNamePattern=integration",
    "test:all": "npx nx run-many --target=test --all",
    "lint": "npx nx run-many --target=lint --all",
    "lint:fix": "npx nx run-many --target=lint --all --fix",
    "lint:md": "markdownlint \"**/*.md\" --fix",
    "spell:check": "cspell \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "clean": "npx nx run-many --target=clean --all && rm -rf node_modules",
    "clean:db": "rm -f crypto_bot.db crypto_bot.db-shm crypto_bot.db-wal",
    "seed": "npx nx seed backend",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:rebuild": "docker compose down && docker compose build --no-cache && docker compose up -d",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "start": "npx nx start backend",
    "start:backend": "npx nx start backend",
    "start:frontend": "npx nx start frontend"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "^21.4.1",
    "@nx/jest": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/react": "^21.4.1",
    "@nx/vite": "^21.4.1",
    "@nx/workspace": "^21.4.1",
    "concurrently": "^8.2.2",
    "cspell": "^8.6.0",
    "markdownlint-cli": "^0.37.0",
    "nx": "21.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "crypto",
    "trading",
    "signals",
    "bot",
    "monorepo",
    "websocket",
    "react",
    "nodejs"
  ],
  "author": "Petar Petrov",
  "license": "MIT"
}